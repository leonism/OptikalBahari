<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "WebSite",
    "name": "{{ site.title }}",
    "url": "{{ site.url }}",
    "description": "{{ site.description }}",
    "dateModified": "{{ site.time | date_to_xmlschema }}",
    "creator": {
      "@type": "Organization",
      "name": "{{ site.author }}"
    }
  }
</script>